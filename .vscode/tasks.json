{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "configure",
			"type": "shell",
			"command": "meson",
			"args": [
				// Setup is the default sub-cmd that can be omitted
				"setup",
				// The path to place the build files relative to current directory
				"build",
				// The path of the executables that would be built out
				"--prefix=${workspaceFolder}/install",
				// Use this option only when regenerating the build/ directory
				//"--reconfigure"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Configure the project with Meson"
		},
		{
			"label": "build",
			"type": "shell",
			// Ninja equals "meson compile" as the meson would choose the default compilor
			"command": "ninja",
			// Default sub-cmd is "build", aka the build target
			"args": [],
			"options": {
				// If you don't specify the cwd, then you would use a "-C build-dir" as the sub-cmd
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Build the project with Ninja"
		},
		{
			"label": "install",
			"type": "shell",
			"command": "ninja",
			"args": [
				// Explicitly specify the build target as install
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
			"detail": "Install the project with Ninja"
		},
		{
			"label": "test",
			"type": "shell",
			"command": "meson",
			"args": [
				"test",
				"-v"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"problemMatcher": [],
			"detail": "Test the project with Meson"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "ninja",
			"args": [
				"clean"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [],
			"detail": "Clean the project with Ninja"
		}
	]
  }
  